{
  "name": "friday-theme",
  "version": "1.0.0",
  "scripts": {
    "start": "npm run watch",
    "watch": "10up-toolkit watch --port=5000 --hot",
    "build": "10up-toolkit build",
    "format-js": "10up-toolkit format-js",
    "lint-js": "10up-toolkit lint-js",
    "lint-style": "10up-toolkit lint-style",
    "test": "10up-toolkit test-unit-jest",
    "clean-dist": "rm -rf ./dist"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "10up-toolkit": "^3.0.0"
  },
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "10up-toolkit": {
    "entry": {
      "style": "./assets/css/style.css",
      "editor": "./assets/css/editor.css",
      "fitvids": "./assets/js/jquery.fitvids.js",
      "theme": "./assets/js/jquery.theme.js"
    }
  }
}
